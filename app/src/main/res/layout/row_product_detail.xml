<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/isReservePartTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/isReserve"
            />

        <TextView
            android:id="@+id/byReservedPartTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/isReservePartTV"
            android:hint="@string/byUser"
            android:layout_marginStart="10dp"
            />

        <ImageButton
            android:id="@+id/editPartBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/delPartBtn"
            android:background="@null"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_edit_blue" />
        <ImageButton
            android:id="@+id/delPartBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/ic_del_blue"
            android:contentDescription="@string/todo" />

    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/quanTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantity"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/measTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meas"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/locTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/location"
                android:gravity="end"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>