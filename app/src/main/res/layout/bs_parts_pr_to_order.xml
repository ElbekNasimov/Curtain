<?xml version="1.0" encoding="utf-8"?>
<!--Bottom sheet layout to display product details and edit and delete it-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/toolbarRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect01"
        android:padding="10dp" >
        <TextView
            android:id="@+id/cuttingPrNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/labelOrderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarRL"
        app:endIconMode="clear_text"
        android:hint="@string/chosen">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/chosenPartPrOrderET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_title_gray"
            android:drawablePadding="5dp"
            android:inputType="none"
            android:editable="false"
            android:textSize="18sp"
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/chosenPartIdPrOrderTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelOrderTitle"
        android:text="@string/id"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/partCutPrObjRV"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/chosenPartIdPrOrderTV"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/row_cut_part_pr_object" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/partCutPrObjRV"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:endIconMode="clear_text"
            android:hint="@string/add_len">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/partCutPrObjLenET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableStart="@drawable/ic_numbers_gray"
                android:drawablePadding="5dp"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/cutPartsPrObjBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="@string/cutting" />
    </LinearLayout>

</RelativeLayout>