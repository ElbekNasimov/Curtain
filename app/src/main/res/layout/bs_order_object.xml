<?xml version="1.0" encoding="utf-8"?>
<!--Bottom sheet layout to display product details and edit and delete it-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/toolbarRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect01"
        android:padding="10dp" >
        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_back_white"
            android:contentDescription="@string/todo" />
        <ImageButton
            android:id="@+id/delOrderObjectBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:src="@drawable/ic_del_white"
            android:importantForAccessibility="no" />
        <ImageButton
            android:id="@+id/editOrderObjectBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@id/delOrderObjectBtn"
            android:background="@null"
            android:src="@drawable/ic_edit_white"
            android:importantForAccessibility="no" />
        <LinearLayout
            android:id="@+id/ObjectInfoLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/nameOrderObjectTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/object_details"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/descOrderObjectTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/description"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ObjectSumInfoLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ObjectInfoLL"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/objectSumTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3200"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/objectCostTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1900"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/objectProfitTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1300"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/toolbarLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarRL"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:id="@+id/idPoshAndUstLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:id="@+id/addExtraPoshivLL"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/orderObjectPoshivPriceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/sewingPrice"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginStart="3dp"
                    android:textSize="18sp" />
                <ImageButton
                    android:id="@+id/editOrderPoshivIB"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_edit_blue"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/addExtraUstanovkaLL"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/orderObjectUstanovkaPriceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/settingPrice"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginStart="3dp"
                    android:textSize="18sp" />
                <ImageButton
                    android:id="@+id/editOrderUstanovkaIB"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_edit_blue"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productOrderObjectsRV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/toolbarLL"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/row_part_detail"/>
    <TextView
        android:id="@+id/NoPartsTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/productOrderObjectsRV"
        android:text="@string/no_parts"
        android:textSize="24sp"
        />

    <LinearLayout
        android:id="@+id/buttonsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp"
        android:paddingEnd="10dp"
        android:layout_below="@id/NoPartsTxt"
        android:orientation="horizontal">
        <Button
            android:id="@+id/addPrToObjectBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/add_product"
            android:backgroundTint="@color/colorPrimary"
            />
        <Button
            android:id="@+id/addExtraObjectBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/extra"
            android:layout_marginStart="3dp"
            android:backgroundTint="@color/colorPrimary"
            />
    </LinearLayout>

</RelativeLayout>