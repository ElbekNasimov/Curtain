<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/imageBtn"
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/productOrderStatusTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/productOrderStatus" />

        <TextView
            android:id="@+id/cutPartsPrOrderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:text="@string/cutParts"
            android:layout_toEndOf="@id/productOrderStatusTV" />


        <ImageButton
            android:id="@+id/editProductOrderBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@id/delProductOrderBtn"
            android:background="@null"
            android:src="@drawable/ic_edit_blue"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/delProductOrderBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/ic_del_blue"
            android:contentDescription="@string/todo" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titleProductOrderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_alignParentStart="true"
            android:gravity="start"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/lenProductOrderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/len"
            android:layout_toEndOf="@id/titleProductOrderTV"
            android:layout_marginStart="20dp"
            android:gravity="end"
            android:textSize="16sp"
            android:textColor="@color/grey2" />

        <TextView
            android:id="@+id/qoldiqKusokTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/len"
            android:layout_toEndOf="@id/lenProductOrderTV"
            android:layout_marginStart="5dp"
            android:gravity="end"
            android:textSize="16sp"
            android:textColor="@color/grey2" />

        <TextView
            android:id="@+id/sumProductOrderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sumProductOrder"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:textSize="16sp"
            android:textColor="@color/grey2" />
    </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>