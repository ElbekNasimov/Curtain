<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/productIconIV"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_shopping_blue"
            android:scaleType="fitCenter"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/todo" />
        <LinearLayout
            android:id="@+id/mainLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_toEndOf="@id/productIconIV"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/priceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textSize="18sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/grey2" />
                <TextView
                    android:id="@+id/discPriceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disPrice"
                    android:textSize="18sp"
                    android:layout_toEndOf="@id/priceTV"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/discNoteTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disc_eg"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:background="@drawable/shape_rect05"
                    android:textColor="@color/colorGreen"
                    android:layout_toEndOf="@id/discPriceTV"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/topishlishiTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/topilishi"
                    android:textSize="18sp"
                    android:layout_toEndOf="@id/discNoteTV"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textSize="22sp"
                android:textColor="@color/black" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>